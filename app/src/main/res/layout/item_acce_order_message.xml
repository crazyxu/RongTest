<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_acce_message_order">


        <TableLayout
            android:id="@+id/orderLayout"
            android:layout_width="fill_parent"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >

                <TextView
                    android:id="@+id/order_delevierMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:text="供货时限：24小时 货到付款"
                    android:textColor="@color/chatOrderHeaderText"
                    android:textSize="12sp" />


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_delevierMode"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_acce_message_item_order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/chatOrderHeaderText"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_quiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/oderTypeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="采购订单号:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_acce_message_item_order_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:textSize="12sp" />
                </TableRow>


            </RelativeLayout>


        </TableLayout>


</LinearLayout>